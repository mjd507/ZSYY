<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tip"
        android:drawableLeft="@drawable/ic_expert_tip"
        android:drawablePadding="@dimen/margins_5"
        android:paddingBottom="@dimen/margins_5"
        android:paddingLeft="@dimen/margins_10"
        android:paddingRight="@dimen/margins_10"
        android:paddingTop="@dimen/margins_5"
        android:text="结果仅供参考，可能产生误诊、漏诊，不能替代医务人员建议。"
        android:textColor="@color/text_tip"
        android:textSize="@dimen/text_small" />

    <include layout="@layout/layout_listview" />
</LinearLayout>