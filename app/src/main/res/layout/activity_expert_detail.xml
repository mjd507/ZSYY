<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_expert_detail_top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tip"
            android:drawableLeft="@drawable/ic_expert_tip"
            android:drawablePadding="@dimen/margins_5"
            android:paddingBottom="@dimen/margins_5"
            android:paddingLeft="@dimen/margins_10"
            android:paddingRight="@dimen/margins_5"
            android:paddingTop="@dimen/margins_10"
            android:text="信息仅供参考，以实际预约挂号时的信息为准"
            android:textColor="@color/text_tip"
            android:textSize="@dimen/text_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margins_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="56.0dip"
                android:layout_height="80.0dip" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margins_10"
                android:layout_marginRight="@dimen/margins_10"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margins_5"
                    android:layout_marginTop="@dimen/margins_5"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />

                <RatingBar
                    android:id="@+id/rb_ratingBar"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_expert_register"
                android:paddingLeft="@dimen/margins_20"
                android:paddingRight="@dimen/margins_20"
                android:text="预约"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins_10"
            android:layout_marginRight="@dimen/margins_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margins_10"
                android:background="@drawable/adapter_content_top_f9"
                android:gravity="center_vertical"
                android:minHeight="@dimen/margins_40"
                android:padding="@dimen/margins_10"
                android:text="擅长"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/tv_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adapter_content_bottom_selector"
                android:gravity="center_vertical"
                android:minHeight="@dimen/margins_40"
                android:padding="@dimen/margins_10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margins_10"
                android:background="@drawable/adapter_content_top_f9"
                android:gravity="center_vertical"
                android:minHeight="@dimen/margins_40"
                android:padding="@dimen/margins_10"
                android:text="门诊时间"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adapter_content_center_selector"
                android:minHeight="@dimen/margins_40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:text="星期"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="一"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="二"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="三"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="四"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <TextView
