                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/iv_star_7"
                    android:layout_width="0.0dip"
