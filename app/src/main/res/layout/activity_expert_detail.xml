                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="日"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adapter_content_center_selector"
                android:gravity="center_vertical"
                android:minHeight="@dimen/margins_40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:text="上午"
                    android:textColor="@color/text_83"
                    android:textSize="@dimen/text_large" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/iv_star_1"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_expert_schdule_stare_unselect"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="1.0dip"
                    android:layout_height="match_parent"
                    android:background="@color/list_divider"
                    android:contentDescription="@string/app_name" />

                <ImageView
