<?xml version="1" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margins_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margins_10"
        android:layout_marginRight="@dimen/margins_10"
        android:layout_marginTop="@dimen/margins_5"
        android:background="@drawable/color_content_top_selector"
        android:clickable="false"
        android:minHeight="@dimen/margins_40"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_more_info"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="简介"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/text_large" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margins_10"
        android:layout_marginRight="@dimen/margins_10"
        android:layout_marginTop="-2dp"
        android:background="@drawable/color_content_center_selector"
        android:clickable="true"
        android:minHeight="@dimen/margins_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_am_flag"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_am_fee"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_am_count"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center"
            android:paddingRight="@dimen/margins_10"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/text_large" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margins_10"
        android:layout_marginRight="@dimen/margins_10"
        android:layout_marginTop="-2dp"
        android:background="@drawable/color_content_bottom_selector"
        android:clickable="true"
        android:minHeight="@dimen/margins_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pm_flag"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_pm_fee"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_pm_count"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center"
            android:paddingRight="@dimen/margins_10"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/text_large" />
    </LinearLayout>
</LinearLayout>