<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margins_5"
        android:layout_marginLeft="@dimen/margins_10"
        android:layout_marginRight="@dimen/margins_10"
        android:layout_marginTop="@dimen/margins_5"
        android:background="@drawable/adapter_content_one_call"
        android:orientation="horizontal"
        android:padding="@dimen/margins_15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="70.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_call_number_top"
                android:gravity="center"
                android:paddingBottom="@dimen/margins_5"
                android:paddingTop="@dimen/margins_5"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="70.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_call_number_bottom"
                android:gravity="center"
                android:paddingBottom="@dimen/margins_2"
                android:paddingTop="@dimen/margins_2"
                android:singleLine="true"
                android:text="当前叫号"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins_10"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_38"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margins_5"
                android:maxLines="2"
                android:textColor="@color/text_83"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margins_10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_call_star_selector" />
    </LinearLayout>
</LinearLayout>